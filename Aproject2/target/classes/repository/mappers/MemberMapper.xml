<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springs.project2.mapper.MemberMapper" >
	
	<select id="login" resultType="Member">
		select password from member where id = #{id}
	</select>
	
	<select id="getMember" resultType="Member">
		select * from member where id = #{id}
	</select>
	
	<insert id="addMember" parameterType="Member" useGeneratedKeys="true">
		insert into member 
		values(#{id},#{name},#{password},#{email},#{emailGet}, SYSDATE()) 
	</insert>
	
	<update id="updateMember">
		update member set id = #{id},
		password = #{password}, email = #{email}, name = #{name}, email_get=#{emailGet} 
	</update>
	
	<select id="memberPassCheck" resultType="String">
		SELECT 
			password
		FROM member
		WHERE id = #{id}
	</select>
</mapper>	



